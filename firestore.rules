rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write their own document
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Authenticated users can read team data for leaderboards/team lists.
    // Only the assigned scorekeeper can create or modify their team.
    match /teams/{teamId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && request.auth.uid == resource.data.scorekeeperId;
    }

    // Any authenticated user can send or read chat messages.
    match /chat/{msgId} {
      allow read, create: if request.auth != null;
    }

    // Disallow all other reads/writes by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
