
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the user is the owner of a document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Users can read their own data
      // Authenticated users can read other users' data (for display names, roles etc)
      allow read: if isAuthenticated();
      // Users can only create and update their own document
      allow write: if isOwner(userId);
    }

    // Teams collection
    match /teams/{teamId} {
      // Any authenticated user can read team data (for leaderboards, etc.)
      allow read: if isAuthenticated();
      // Only authenticated users can create teams
      allow create: if isAuthenticated();
      // Only the scorekeeper associated with the team can update it
      allow update: if isAuthenticated() && isOwner(resource.data.scorekeeperId);
    }
    
    // Games collection and its subcollections
    match /games/{gameId} {
      // Any authenticated user can read game data
      allow read: if isAuthenticated();
      // Any authenticated user can create a game
      allow create: if isAuthenticated();
      // Only the scorekeeper who created the game can update it
      allow update: if isAuthenticated() && isOwner(resource.data.createdBy);

      // Scores subcollection
      match /scores/{scoreId} {
         // Allow anyone to read scores
         allow read: if isAuthenticated();
         // Only the game creator can write scores
         allow write: if isAuthenticated() && isOwner(get(/databases/$(database)/documents/games/$(gameId)).data.createdBy);
      }
    }

    // Chat channels
    match /channels/{channelId}/messages/{messageId} {
        // Any authenticated user can read messages
        allow read: if isAuthenticated();
        // Any authenticated user can create (send) messages
        allow create: if isAuthenticated();
    }
  }
}
