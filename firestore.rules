rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own user document
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Teams can be read by any authenticated user (for leaderboards)
    // Only the assigned scorekeeper can create, update, or delete their team
    match /teams/{teamId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && request.auth.uid == get(/databases/$(database)/documents/teams/$(teamId)).data.scorekeeperId;
    }

    // Games can be read by any authenticated user.
    // Any authenticated user can create a game (UI restricts this to scorekeepers).
    match /games/{gameId} {
      allow read, create: if request.auth != null;
      allow update, delete: if false; // Not implemented yet
    }

    // Chat can be read by anyone, but only created by authenticated users.
    match /chat/{msgId} {
      allow read: if true;
      allow create: if request.auth != null;
    }
  }
}
