rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    match /teams/{teamId} {
      // allow list is needed for queries (leaderboards, etc.)
      // allow read is for getting a single document
      allow list, read: if request.auth != null;
      
      // Only scorekeepers can create teams
      allow create: if request.auth != null && request.resource.data.scorekeeperId == request.auth.uid;

      // Nobody can update or delete teams after creation
      allow update, delete: if false; 
    }

    match /chatRooms/{roomId}/{messages=**} {
        // allow list/read on the messages subcollection for chat
        allow list, read, create: if request.auth != null;
    }
  }
}
