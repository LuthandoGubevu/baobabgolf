rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Authenticated users can read their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Authenticated users can read teams, only scorekeepers can create them.
    match /teams/{teamId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.scorekeeperId == request.auth.uid;
      allow update, delete: if false; // No updates or deletes for now
    }

    // Authenticated users can read and create messages in any channel.
    match /channels/{channelId}/messages/{messageId} {
      allow read, create: if request.auth != null;
      allow update, delete: if false; // No editing/deleting messages
    }
  }
}
    